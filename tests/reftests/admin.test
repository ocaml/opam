echo "root: $(basename $(dirname $(dirname "$hc")))"
if [ -d "$hc" ]; then
  for f in $(ls "$hc") ; do
    echo "$f: $(wc -l "$hc/$f" | cut -f 1 -d ' ')"
  done
else
  echo "no hash-cache"
fi
