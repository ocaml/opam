### <update-hashes.sh>
set -ue

for p in `ls REPO/packages/*/*/opam`; do
  sed -i.bak "s/patch-md5/$PATCH_MD5/" $p
  sed -i.bak "s/patch-sha256/$PATCH_SHA256/" $p
done
