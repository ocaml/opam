### <hash.sh>
set -ue
repo=$1
nv=$2
n=`echo "$nv" | cut -f1 -d.`
path=$repo/packages/$n/$nv
echo "extra-files:[" >> "$path/opam"
for file in `ls "$path/files"`; do
  echo "  [\"$file\" \"md5=`openssl md5 "$path/files/$file" | cut -f2 -d' '`\"]" >> "$path/opam"
done
echo   "]" >> "$path/opam"
