### <add-files.sh>
set -ue
mode=$1
case "$mode" in
  all)
  copy=1
  sha=1
  ;;
  cp)
  copy=1
  sha=0
  ;;
  sha)
  copy=0
  sha=1
  ;;
esac
repo=$2
install=$3
nv=$4
n=${nv%.*}
pkgpath="$repo/packages/$n/$nv"
if [ "$copy" -eq 1 ]; then
  mkdir -p "$pkgpath/files"
  cp "$install" "$pkgpath/files/$n.installl"
fi
if [ "$sha" -eq 1 ]; then
  if [ "$install" = install ]; then
    md5=$INSTALL_MD5
  else
    md5=$AINSTALL_MD5
  fi
  cat >> "$pkgpath/opam" << EOF
extra-files: [
  [ "$n.installl" "md5=$md5" ]
]
EOF
fi
