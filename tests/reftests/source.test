### <pkg:pandore.3>
opam-version: "2.0"
### <mkurl.sh>
p=pandore.3
arch=origin
file="REPO/packages/${p%.*}/$p/opam"
MD5=$(openssl md5 $arch.tgz | cut -d' ' -f2)
basedir=$(printf '%s' "$BASEDIR" | sed 's/\\/\\\\/g')
cat >> "$file" << EOF
url {
  src: "$arch.tgz"
  checksum: "md5=$MD5"
}
dev-repo: "git+file://${basedir}/pandev"
EOF
