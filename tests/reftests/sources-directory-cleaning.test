### <pkg:waste.1>
opam-version: "2.0"
### <mkurl.sh>
n=waste
v=1
arch=waste.tgz
file="REPO/packages/$n/$n.$v/opam"
basedir=$(printf '%s' "$BASEDIR" | sed 's/\\/\\\\/g')
MD5=$(openssl md5 "$arch" | cut -d' ' -f2)
cat >> "$file" << EOF
url {
  src: "$arch"
  checksum: "md5=$MD5"
}
dev-repo: "file://${basedir}/$n"
EOF
### sh mkurl.sh
### <pkg:waste-local.1>
